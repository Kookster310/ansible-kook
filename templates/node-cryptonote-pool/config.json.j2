{
	"coin": "monero",
	"symbol": "XMR",

	"logging": {
		"files": {
			"level": "info",
			"directory": "logs",
			"flushInterval": 5
		},
		"console": {
			"level": "info",
			"colors": true
		}
	},

	"poolServer": {
		"enabled": true,
		"clusterForks": "auto",
		"poolAddress": "{{ pool_address }}",
		"blockRefreshInterval": 1000,
		"minerTimeout": 900,
		"ports": [{
				"port": {{ port_low }},
				"difficulty": 100,
				"desc": "Low end hardware"
			},
			{
				"port": {{ port_mid }},
				"difficulty": 2000,
				"desc": "Mid range hardware"
			},
			{
				"port": {{ port_high }},
				"difficulty": 10000,
				"desc": "High end hardware"
			},
			{
				"port": {{ port_secret }},
				"difficulty": 10000,
				"desc": "Hidden port",
				"hidden": true
			}
		],
		"varDiff": {
			"minDiff": 2,
			"maxDiff": 100000,
			"targetTime": 100,
			"retargetTime": 30,
			"variancePercent": 30,
			"maxJump": 100
		},
		"shareTrust": {
			"enabled": true,
			"min": 10,
			"stepDown": 3,
			"threshold": 10,
			"penalty": 30
		},
		"banning": {
			"enabled": true,
			"time": 600,
			"invalidPercent": 25,
			"checkThreshold": 30
		},
		"slushMining": {
			"enabled": {{ slush }},
			"weight": 300,
			"blockTime": 60,
			"lastBlockCheckRate": 1
		}
	},

	"payments": {
		"enabled": true,
		"interval": {{ payment_interval }},
		"maxAddresses": 50,
		"mixin": 3,
		"transferFee": {{ payment_fee }},
		"minPayment": {{ payment_minimum }},
		"denomination": {{ payment_denomination }}
	},

	"blockUnlocker": {
		"enabled": true,
		"interval": {{ payment_interval }},
		"depth": 60,
		"poolFee": {{ pool_fee }},
		"devDonation": {{ pool_devDonation }},
		"coreDevDonation": {{ pool_devDonation }}
	},

	"api": {
		"enabled": true,
		"hashrateWindow": 600,
		"updateInterval": 5,
		"port": {{ api_port }},
		"blocks": 30,
		"payments": 30,
		"password": "{{ api_password }}"
	},

	"daemon": {
		"host": "127.0.0.1",
		"port": {{ daemon_port }}
	},

	"wallet": {
		"host": "127.0.0.1",
		"port": {{ wallet_port }}
	},

	"redis": {
		"host": "127.0.0.1",
		"port": {{ redis_port }},
		"auth": null
	}
}
